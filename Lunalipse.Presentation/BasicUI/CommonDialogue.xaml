<Page x:Class="Lunalipse.Presentation.BasicUI.CommonDialogue"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lunalipse.Presentation.BasicUI"
      mc:Ignorable="d" 
      Height="130" Width="460"
      Title="CommonDialogue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="231*"/>
            <ColumnDefinition Width="229*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="cnt" TextWrapping="Wrap" Text="TextBlock" Foreground="White" Padding="10,5,0,0" FontFamily="Microsoft YaHei UI Light" MaxWidth="438" MaxHeight="66" Margin="10,10,10,0" Height="87" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button x:Name="no" Content="取   消" Margin="0,0,112,8" Background="#FF222222" Foreground="White" BorderBrush="{x:Null}" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="97" Grid.Column="1"/>
        <Button x:Name="yes" Content="确   定" Margin="0,0,10,8" Background="#FF222222" Foreground="White" BorderBrush="{x:Null}" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="97" Grid.Column="1"/>
    </Grid>
</Page>
